<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      {{#if errors}}
        <div class="alert alert-danger">
          <strong>{{errors.message}}</strong>
        </div>
      {{/if}}
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <form class="form-signin">
            <label for="inputEmail">Email Address</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend3">
                  <i class="fa fa-paper-plane"></i>
                </span>
              </div>
              {{input type="email" id="email" class="form-control" value=email placeholder="Email address" required="required" autofocus="autofocus"}}
            </div>

            <label for="inputPassword">Password</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupPrepend3">
                  <i class="fa fa-key"></i>
                </span>
              </div>
              {{input type="password" id="password" class="form-control" value=password placeholder="Password" required="required"}}
            </div>
            <button {{action "login"}} class="btn btn-lg btn-primary btn-block sign-in" type="submit">Sign in</button>
            <hr>
            <button class="btn btn-danger google-button" type="submit"><i class="fa fa-google-plus"></i> Sign in with Google</button>
            <button class="btn btn-primary facebook-button" type="submit"><i class="fa fa-facebook"></i> Sign in with Facebook</button>
          </form>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            Don't have an account?{{#link-to "signup"}}Sign Up{{/link-to}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>